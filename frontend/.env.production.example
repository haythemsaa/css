# ============================================
# CSS Platform - Frontend PRODUCTION Configuration
# ⚠️ ATTENTION: Ne jamais commiter ce fichier avec les vraies valeurs!
# ============================================

# -----------------------
# API Backend URL (Production)
# -----------------------
VITE_API_URL=https://api.css.tn/api/v1

# -----------------------
# Application
# -----------------------
VITE_APP_NAME="CSS Platform"
VITE_APP_ENV=production

# -----------------------
# Features Flags (Production)
# -----------------------
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_SOCIAL_SHARE=true
VITE_ENABLE_OFFLINE_MODE=true

# -----------------------
# Analytics & Tracking
# -----------------------
# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Facebook Pixel
VITE_FB_PIXEL_ID=XXXXXXXXXXXXXXXX

# Google Tag Manager
VITE_GTM_ID=GTM-XXXXXXX

# -----------------------
# Payment Gateway (Production)
# -----------------------
# Stripe Production Keys
VITE_STRIPE_PUBLIC_KEY=pk_live_YOUR_STRIPE_PUBLIC_KEY_HERE

# -----------------------
# Social Media URLs
# -----------------------
VITE_FACEBOOK_URL=https://facebook.com/cssfax
VITE_TWITTER_URL=https://twitter.com/cssfax
VITE_INSTAGRAM_URL=https://instagram.com/cssfax
VITE_YOUTUBE_URL=https://youtube.com/cssfax
VITE_TIKTOK_URL=https://tiktok.com/@cssfax

# -----------------------
# Google Maps (Production)
# -----------------------
VITE_GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY_HERE

# -----------------------
# Error Tracking (Production)
# -----------------------
# Sentry
VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# -----------------------
# Analytics Comportemental
# -----------------------
# Hotjar
VITE_HOTJAR_ID=XXXXXXX
VITE_HOTJAR_SNIPPET_VERSION=6

# Mixpanel
VITE_MIXPANEL_TOKEN=YOUR_MIXPANEL_TOKEN

# -----------------------
# CDN & Assets
# -----------------------
# Si vous utilisez un CDN pour les assets
VITE_CDN_URL=https://cdn.css.tn

# -----------------------
# Performance
# -----------------------
# Service Worker pour PWA
VITE_ENABLE_SERVICE_WORKER=true

# -----------------------
# Security
# -----------------------
# Content Security Policy
VITE_CSP_ENABLED=true

# -----------------------
# Features Toggles
# -----------------------
# Désactiver certaines features en production si nécessaire
VITE_ENABLE_CHAT_SUPPORT=true
VITE_ENABLE_LIVE_SCORES=true
VITE_ENABLE_VIDEO_STREAMING=true
