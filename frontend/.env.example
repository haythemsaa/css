# ============================================
# CSS Platform - Frontend Configuration
# ============================================

# -----------------------
# API Backend URL
# -----------------------
# Development: Point vers le serveur Laravel local
VITE_API_URL=http://localhost:8000/api/v1

# Production: Remplacez par l'URL de votre API en production
# VITE_API_URL=https://api.css.tn/api/v1

# -----------------------
# Application
# -----------------------
VITE_APP_NAME="CSS Platform"
VITE_APP_ENV=development

# -----------------------
# Features Flags
# -----------------------
# Activer/désactiver des fonctionnalités
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SOCIAL_SHARE=true
VITE_ENABLE_OFFLINE_MODE=true

# -----------------------
# Analytics & Tracking
# -----------------------
# Google Analytics
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Facebook Pixel
# VITE_FB_PIXEL_ID=

# -----------------------
# Payment Gateway
# -----------------------
# Stripe (Abonnements Premium/Socios)
# VITE_STRIPE_PUBLIC_KEY=pk_test_XXXXXX

# Production:
# VITE_STRIPE_PUBLIC_KEY=pk_live_XXXXXX

# -----------------------
# Social Media
# -----------------------
# Pour les boutons de partage
VITE_FACEBOOK_URL=https://facebook.com/cssfax
VITE_TWITTER_URL=https://twitter.com/cssfax
VITE_INSTAGRAM_URL=https://instagram.com/cssfax
VITE_YOUTUBE_URL=https://youtube.com/cssfax

# -----------------------
# Google Maps
# -----------------------
# Pour la carte des partenaires
# VITE_GOOGLE_MAPS_API_KEY=

# -----------------------
# Autres Services
# -----------------------
# Sentry (Error tracking)
# VITE_SENTRY_DSN=

# Hotjar (Analytics comportemental)
# VITE_HOTJAR_ID=
