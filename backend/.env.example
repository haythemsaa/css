# ============================================
# CSS Platform - Backend Configuration
# ============================================

# -----------------------
# Application
# -----------------------
APP_NAME="CSS Platform"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Africa/Tunis

APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# -----------------------
# Logging
# -----------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# -----------------------
# Database (SQLite - Development)
# -----------------------
# Pour le développement local avec SQLite
DB_CONNECTION=sqlite
# La base SQLite sera créée dans database/database.sqlite

# -----------------------
# Database (MySQL - Production)
# -----------------------
# Décommentez ces lignes pour utiliser MySQL en production
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=css_db
# DB_USERNAME=css_user
# DB_PASSWORD=your_secure_password

# -----------------------
# Session & Cache
# -----------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

# -----------------------
# Redis (Production recommandé)
# -----------------------
# Pour améliorer les performances en production
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Décommentez pour utiliser Redis en production:
# CACHE_STORE=redis
# QUEUE_CONNECTION=redis
# SESSION_DRIVER=redis

# -----------------------
# Memcached (Alternative à Redis)
# -----------------------
MEMCACHED_HOST=127.0.0.1

# -----------------------
# Email (SMTP)
# -----------------------
# Development: Utilise 'log' (emails dans les logs)
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@css.tn"
MAIL_FROM_NAME="${APP_NAME}"

# Production: Configurez votre SMTP
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.example.com
# MAIL_PORT=587
# MAIL_USERNAME=your_username
# MAIL_PASSWORD=your_password
# MAIL_ENCRYPTION=tls

# -----------------------
# AWS S3 (Stockage fichiers)
# -----------------------
# Pour stocker les fichiers (images, vidéos) sur S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Si activé, définissez:
# FILESYSTEM_DISK=s3

# -----------------------
# CORS (Frontend)
# -----------------------
# URL du frontend pour autoriser les requêtes CORS
FRONTEND_URL=http://localhost:5173
SANCTUM_STATEFUL_DOMAINS=localhost:5173

# -----------------------
# Laravel Sanctum (API Authentication)
# -----------------------
# Durée de vie des tokens (en minutes, null = jamais expire)
SANCTUM_TOKEN_EXPIRATION=null

# -----------------------
# Filament (Admin Panel)
# -----------------------
# Déjà configuré, accessible sur /admin
# Créez un admin avec: php artisan make:filament-user

# -----------------------
# Queue & Jobs
# -----------------------
# Workers pour traiter les jobs en arrière-plan
# Lancez avec: php artisan queue:work

# -----------------------
# Broadcasting (WebSockets)
# -----------------------
# Pour le temps réel (notifications, scores matchs)
# BROADCAST_CONNECTION=pusher
# PUSHER_APP_ID=
# PUSHER_APP_KEY=
# PUSHER_APP_SECRET=
# PUSHER_APP_CLUSTER=eu

# -----------------------
# Vite (Assets)
# -----------------------
VITE_APP_NAME="${APP_NAME}"

# -----------------------
# Services Tiers
# -----------------------

# Google Maps API (Géolocalisation partenaires)
# GOOGLE_MAPS_API_KEY=

# Payment Gateway (Abonnements Premium/Socios)
# Pour intégrer les paiements (Stripe, PayPal, etc.)
# STRIPE_KEY=
# STRIPE_SECRET=

# SMS Gateway (Notifications)
# Pour envoyer des SMS aux utilisateurs
# SMS_API_KEY=
# SMS_SENDER_NAME=CSS

# Analytics
# GOOGLE_ANALYTICS_ID=

# -----------------------
# CSS Platform - Configuration Métier
# -----------------------

# Commission CSS sur les transactions (%)
CSS_COMMISSION_RATE=5

# Prix abonnements (TND)
PREMIUM_PRICE=15
SOCIOS_PRICE=200

# Points fidélité (% du montant dépensé)
LOYALTY_POINTS_RATE=10

# Durée validité codes CSS Privilèges (jours)
CODE_VALIDITY_DAYS=30

# Limite génération codes par utilisateur/jour
CODE_GENERATION_LIMIT=10

# Mode maintenance
# APP_ENV=maintenance
