# ============================================
# CSS Platform - Backend PRODUCTION Configuration
# ⚠️ ATTENTION: Ne jamais commiter ce fichier avec les vraies valeurs!
# ============================================

# -----------------------
# Application
# -----------------------
APP_NAME="CSS Platform"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key_generate
APP_DEBUG=false
APP_URL=https://css.tn
APP_TIMEZONE=Africa/Tunis

APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file
BCRYPT_ROUNDS=12

# -----------------------
# Logging
# -----------------------
LOG_CHANNEL=daily
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning
LOG_DAILY_DAYS=14

# -----------------------
# Database (MySQL Production)
# -----------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=css_production
DB_USERNAME=css_user
DB_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD_HERE

# -----------------------
# Session & Cache (Redis Recommandé)
# -----------------------
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.css.tn
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=css_cache

# -----------------------
# Redis (Production)
# -----------------------
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# -----------------------
# Email (SMTP Production)
# -----------------------
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=noreply@css.tn
MAIL_PASSWORD=YOUR_SMTP_PASSWORD_HERE
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@css.tn"
MAIL_FROM_NAME="${APP_NAME}"

# -----------------------
# AWS S3 (Stockage fichiers Production)
# -----------------------
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_HERE
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY_HERE
AWS_DEFAULT_REGION=eu-west-1
AWS_BUCKET=css-platform-media
AWS_URL=https://css-platform-media.s3.eu-west-1.amazonaws.com
AWS_USE_PATH_STYLE_ENDPOINT=false

FILESYSTEM_DISK=s3

# -----------------------
# CORS (Frontend Production)
# -----------------------
FRONTEND_URL=https://css.tn
SANCTUM_STATEFUL_DOMAINS=css.tn,www.css.tn

# -----------------------
# Laravel Sanctum (API Authentication)
# -----------------------
# Durée de vie des tokens: 60 jours
SANCTUM_TOKEN_EXPIRATION=86400

# -----------------------
# Queue & Jobs (Production)
# -----------------------
# Lancez Horizon pour gérer les queues:
# php artisan horizon
QUEUE_CONNECTION=redis

# -----------------------
# Broadcasting (Pusher pour temps réel)
# -----------------------
BROADCAST_CONNECTION=pusher
PUSHER_APP_ID=YOUR_PUSHER_APP_ID
PUSHER_APP_KEY=YOUR_PUSHER_APP_KEY
PUSHER_APP_SECRET=YOUR_PUSHER_APP_SECRET
PUSHER_APP_CLUSTER=eu
PUSHER_SCHEME=https
PUSHER_HOST=
PUSHER_PORT=443

# -----------------------
# Services Tiers Production
# -----------------------

# Google Maps API
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY_HERE

# Stripe (Paiements)
STRIPE_KEY=pk_live_YOUR_STRIPE_PUBLIC_KEY
STRIPE_SECRET=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# SMS Gateway (Twilio)
TWILIO_SID=YOUR_TWILIO_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+216XXXXXXXX
SMS_SENDER_NAME=CSS

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry (Error Tracking)
SENTRY_LARAVEL_DSN=https://xxxxxx@sentry.io/xxxxxx
SENTRY_TRACES_SAMPLE_RATE=0.2

# -----------------------
# Performance & Optimization
# -----------------------
# Opcache activé
OPCACHE_ENABLE=1

# Compression
COMPRESS_ENABLED=true

# -----------------------
# Security
# -----------------------
# Rate limiting
THROTTLE_RATE_LIMIT=60

# Session timeout (minutes)
SESSION_LIFETIME=120

# -----------------------
# CSS Platform - Configuration Métier Production
# -----------------------

# Commission CSS sur les transactions (%)
CSS_COMMISSION_RATE=5

# Prix abonnements (TND)
PREMIUM_PRICE=15
SOCIOS_PRICE=200

# Points fidélité (% du montant dépensé)
LOYALTY_POINTS_RATE=10

# Durée validité codes CSS Privilèges (jours)
CODE_VALIDITY_DAYS=30

# Limite génération codes par utilisateur/jour
CODE_GENERATION_LIMIT=10

# -----------------------
# Monitoring & Health
# -----------------------
# New Relic
# NEW_RELIC_LICENSE_KEY=
# NEW_RELIC_APP_NAME=CSS Platform

# -----------------------
# Backup
# -----------------------
# Configurez les backups automatiques
BACKUP_DISK=s3
BACKUP_NOTIFICATIONS_MAIL=admin@css.tn

# -----------------------
# Vite (Assets)
# -----------------------
VITE_APP_NAME="${APP_NAME}"
ASSET_URL=https://css.tn
